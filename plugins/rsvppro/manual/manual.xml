<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5"  type="plugin" group="rsvppro" method="upgrade">
	<name>RSVP Pro - Manual</name>
	<author>Geraint Edwards</author>
	<creationDate>November 2015</creationDate>
	<copyright>(C) 2010-2015 GWE Systems Ltd. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail></authorEmail>
	<authorUrl>www.gwesystems.com</authorUrl>
	<version>3.4.2</version>
	<description>MANUAL_PAYMENT_DESC</description>
	<files>
		<filename plugin="manual">manual.php</filename>
	</files>
	<languages folder="languages">
		<language tag="en-GB">en-GB.plg_rsvppro_manual.ini</language>
	</languages>
	<template  name="Manual">
		<form>
			<fields>
				<fieldset name="Manual" addfieldpath="/administrator/components/com_rsvppro/fields/" >
					<field name="templatebody" type="jevhtml" default="Total Fees = {TOTALFEES}&lt;br/&gt;Fees Already Paid= {FEESPAID}&lt;br/&gt;Outstanding Balance = {BALANCE}&lt;br/&gt;&lt;br/&gt;Please send your payment to ..."
						   cols="50" rows="10" label="JEV_MANUAL_PAYMENTPAGE_LABEL"   labelclass="control-label" description="JEV_MANUAL_PAYMENTPAGE_DESC" />
					<field name="notifymanpay" type="list" default="1" label='JEV_NOTIFY_MANUAL_PAYMENT'    labelclass="control-label" description='JEV_NOTIFY_MANUAL_PAYMENT_DESC'   >
						<option value="0">RSVP_NO</option>
						<option value="1">JEV_AFTER_PAYMENT_CONFIRMED</option>
						<option value="2">JEV_AFTER_REGISTRATION</option>
					</field>
					<field name="manpaysubject" type="jevtextarea" default='JEV_MANUAL_PAYMENT_CONFIRMATION_SUBJECT'  rows="1" cols="80" label='JEV_MANUAL_PAYMENT_CONFIRMATION_SUBJECT_LABEL'    labelclass="control-label"  description='JEV_MANUAL_PAYMENT_CONFIRMATION_MESSAGE_DESC'  />
					<field name="manpaymessage" type="jevhtml" default='JEV_MANUAL_PAYMENT_CONFIRMATION_MESSAGE'  rows="6" cols="80" label='JEV_MANUAL_PAYMENT_CONFIRMATION_MESSAGE_LABEL'    labelclass="control-label" description='JEV_MANUAL_PAYMENT_CONFIRMATION_MESSAGE_DESC'  />
				</fieldset>
			</fields>
		</form>
	</template>
	<config>
		<fields name="params">
			<fieldset name="Manual" addfieldpath="/administrator/components/com_rsvppro/fields/" >
				<field name="templatebody" type="jevhtml" default="Total Fees = {TOTALFEES}&lt;br/&gt;Fees Already Paid= {FEESPAID}&lt;br/&gt;Outstanding Balance = {BALANCE}&lt;br/&gt;&lt;br/&gt;Please send your payment to ..."
					   cols="50" rows="10" label="JEV_MANUAL_PAYMENTPAGE_LABEL"   labelclass="control-label" description="JEV_MANUAL_PAYMENTPAGE_DESC"  filter="safehtml"  />
				<field name="notifymanpay" type="list" default="1" label='JEV_NOTIFY_MANUAL_PAYMENT'    labelclass="control-label" description='JEV_NOTIFY_MANUAL_PAYMENT_DESC'   >
					<option value="0">RSVP_NO</option>
					<option value="1">JEV_AFTER_PAYMENT_CONFIRMED</option>
					<option value="2">JEV_AFTER_REGISTRATION</option>
				</field>
				<field name="manpaysubject" type="jevtextarea" default='JEV_MANUAL_PAYMENT_CONFIRMATION_SUBJECT'  rows="1" cols="80" label='JEV_MANUAL_PAYMENT_CONFIRMATION_SUBJECT_LABEL'    labelclass="control-label" description='JEV_MANUAL_PAYMENT_CONFIRMATION_MESSAGE_DESC'  />
				<field name="manpaymessage" type="jevhtml" default='JEV_MANUAL_PAYMENT_CONFIRMATION_MESSAGE'  rows="6" cols="80" label='JEV_MANUAL_PAYMENT_CONFIRMATION_MESSAGE_LABEL'   labelclass="control-label"  description='JEV_MANUAL_PAYMENT_CONFIRMATION_MESSAGE_DESC'  filter="safehtml" />
			</fieldset>
		</fields>
	</config>

</extension>
