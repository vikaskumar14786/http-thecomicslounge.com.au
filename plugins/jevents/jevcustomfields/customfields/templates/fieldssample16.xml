<?xml version="1.0" encoding="utf-8"?>
<config>
	<!-- Joomla 1.6 fields sample file //-->
	<params addpath="/plugins/jevents/jevcustomfields/customfields/" >
		<!-- Access levels 1=Public, 2=Registered, 3=Special  etc. //-->
	
		<!-- can have class attributes if required //-->
		<param name="field1" type="jevrlist" default="-1" label="Select List" required="1" description="Select List tool tip" allowoverride="1"  filter="1" multifilter="1"  filtersize="3" access="1" requiredmessage="The field (Select List) is required" readaccess="1">
		<!-- select lists  MUST have numeric values//-->
			<option value="-1">Select One</option>
			<option value="0">No</option>
			<option value="1">Yes</option>
			<option value="2">Maybe</option>
			<option value="3">Possibly</option>
			<option value="4" archive="1">Probably</option>
		</param>

		<!-- when contact = 1 link to joomla contact form is sought //-->
		<param name="joomlauser" label="Select User" type="jevruser" default="0" contact="1" />	

		<!-- new searchable atrribute if you want to include a field in the JEvents search fields 
		Note that fullsearch="1" will allow any part of the custom field value to be matched and not just the start
		//-->
		<param name="field2" type="jevrtext" default="default text" size="20" categoryrestrictions="232,291"  maxlength="100" required="1" searchable="1" fullsearch="1" label="Text Field" description="Text field tooltip"  allowoverride="0"  filter="1"  access="1"  requiredmessage="The field (Text Field) is required" />

		<!-- support for youtube and vimeo videos - to use a vimeo video id it is entered as vimeo=23934872 by the event creator //-->
		<param name="youtube" type="jevryoutube" default="" label="YouTube Video Id" size="30" required="0" description="Please provide a YouTube Video Id" allowoverride="0" />

		<param name="field2.5" type="jevrinstruction" default="Information for the user/edit" label="Information Text" description="No input required from the event editor"  filter="0"  access="1" hiddenvalue=""/>

		<!-- new searchable atrribute if you want to include a field in the JEvents search fields //-->
		<param name="field3" type="jevrtextarea" cols="40" rows="5" default="more default text" label="Textarea" searchable="1" description="Textarea tooltip"  allowoverride="1"  filter="1"  access="1" hiddenvalue="" allowhtml="1"/>

		<param name="field4" type="jevrboolean" default="0" label="Boolean" required="1" requiredmessage="The field (Boolean) is required" description="Boolean tooltip"  allowoverride="0"  filter="1"  access="1"/>

		<param name="field5" type="jevrradio" default="0" label="Radio List" description="Radio List tooltip"  allowoverride="1"  filter="1"  filtermenusandmodules="1" filterdefault="0" access="1">
		<!-- radio MUST have numeric values//-->
			<option value="0">No</option>
			<option value="1">Yes</option>
			<option value="2">Maybe</option>
			<option value="3">Possibly</option>
		</param>

	</params>
	
	<params  addpath="/plugins/jevents/jevcustomfields/customfields/"  group="Extra Tab"	>

		<!-- for checkboxes default values 1=checked, 0=unchecked //-->
		<!-- filtering is not yet enabled for checkbox fields //-->
		<param name="checkbox1" type="jevrcheckbox" label="Checkboxes" default="1"  description="Checkboxes tooltip"  allowoverride="1"  access="1" />

		<!-- for checkboxes default values 1=checked, 0=unchecked //-->
		<!-- filtering is not yet enabled for checkbox fields //-->
		<param name="checkboxlist1" type="jevrcheckbox" label="Checkbox List"  description="Checkboxes tooltip"  filter="1"    allowoverride="1" access="1" >
		<!-- multiple checkboxe option MUST have POSITIVE  numeric values and ALL must be greater than zero //-->
			<option value="1" default="0" >No</option>
			<option value="2" default="0" >Yes</option>
			<option value="3" default="1" >Maybe</option>
			<option value="4" default="1" >Possibly</option>
		</param>
			
		<param name="field6" type="jevrmultilist" default="-1" label="Multi Select List" required="1" description="Select List tool tip" allowoverride="1" filter="1"  access="1"  requiredmessage="The field (Multi Select List) is required" >
		<!-- multiple select lists MUST have numeric values and for searching none should match part of another e.g. don't use 1 and 10 instead you should use 101 and 110  //-->
			<option value="-1">Select One or more</option>
			<option value="300">No</option>
			<option value="301">Yes</option>
			<option value="302">Maybe</option>
			<option value="303">Possibly</option>
		</param>

		<param name="field7" type="jevrurl" default="http://www.google.com"  size="60" maxlength="255" required="0" requiredmessage="" label="URL (with http://)" description="Enter Full URL here"  allowoverride="0"  filter="0" />

		<param name="updatablefield1" type="jevrupdatable" default="updatable notes" rows="5" cols="30" required="0" append="1" requiredmessage="" label="Updatable Notes" buttonlabel="Update Field"  description="Notes that can up updated from the frontend of the site by event editors" updatedmessage="Field Updated" allowoverride="0" />


	</params>
</config>