<?xml version="1.0" encoding="utf-8"?>
<extension version="1.0" type="plugin" group="search" method="upgrade">
	<name>Search - JEvents People/Resources</name>
	<creationDate>August 2015</creationDate>
	<author>Geraint Edwards</author>
	<copyright>(C)2009-2014 GWE Systems Ltd</copyright>
	<license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
	<authorEmail></authorEmail>
	<authorUrl>www.jevents.net</authorUrl>
	<version>3.0.35</version>
    <license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
    <description>PEOPLE_SEARCH_DESC</description>
    <files>
        <filename plugin="jevpeoplesearch">jevpeoplesearch.php</filename>
    </files>
	<languages>
		<language tag="en-GB">en-GB.plg_search_jevpeoplesearch.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset  name="basic" addfieldpath="/administrator/components/com_jevents/fields/">
				<field 
					name="search_limit" 
					type="text" 
					size="5" 
					default="50" 
					label="JFIELD_PLG_SEARCH_SEARCHLIMIT_LABEL" 
					description="JFIELD_PLG_SEARCH_SEARCHLIMIT_DESC"/>
				<field 
					name="search_private" 
					type="jevboolean" 
					default="0" 
					menu="hide" 
					label="PLG_JEVENTS_JEVPEOPLESEARCH_SEARCH_PRIVATE_LABEL" 
					description="PLG_JEVENTS_JEVPEOPLESEARCH_SEARCH_PRIVATE_DESC"/>
			</fieldset>
		</fields>
	</config>		
</extension>
